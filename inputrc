set editing-mode vi
set keymap vi
set show-mode-in-prompt on
set keyseq-timeout 100

# Disable visual mode
set keymap vi-command
v: ""

# Thanks to https://michurin.github.io/xterm256-color-picker/
set vi-ins-mode-string " \1\033[38;5;16;48;5;47m\2INS ∫\1\033[m\2 "
set vi-cmd-mode-string " \1\033[38;5;16;48;5;177m\2CMD ⌘\1\033[m\2 "

